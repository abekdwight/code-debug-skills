{
  "name": "code-debug-skills",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "sync:skills": "node scripts/sync-skills.mjs",
    "build": "pnpm run sync:skills && pnpm --filter debugsk build",
    "lint": "pnpm --filter debugsk lint",
    "typecheck": "pnpm --filter debugsk typecheck",
    "test": "pnpm --filter debugsk test",
    "format": "pnpm --filter debugsk format",
    "format:write": "pnpm --filter debugsk format:write",
    "release": "bash scripts/release.sh",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major"
  }
}
